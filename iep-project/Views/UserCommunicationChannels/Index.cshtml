@model IEnumerable<iep_project.Models.CommunicationChannel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != "")
{
    <h1 class="text-danger"> @ViewBag.Message </h1>
}

<h2>Communications Channels</h2>

<p>
    @Html.ActionLink("Open a new Communication Channel", "Create") for @ViewBag.Price Tokens
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfAgents)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr @if (item.Open == false) { @Html.Raw("class=\"active\""); } >
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfAgents)
        </td>
        <td>
            @Html.ActionLink("View", "Details", new { id = item.Id })
            @if (item.Open)
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Close", "Close", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>