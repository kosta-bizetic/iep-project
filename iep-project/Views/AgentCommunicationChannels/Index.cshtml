@model IEnumerable<iep_project.Models.CommunicationChannel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Open Communications Channels</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfAgents)
        </th>
        <th>
            Actions
        </th>
    </tr>

@for (int i = 0; i < Model.Count(); i++) {
    var item = Model.ElementAt(i);
    bool member = ViewBag.ChannelMember[i];
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfAgents)
        </td>
        <td>
            @if (member)
            {
                @Html.ActionLink("Open", "Details", new { id = item.Id })
                @Html.Raw(" | ")
                @Html.ActionLink("Leave", "Leave", new { id = item.Id })
            }
            else
            {
                @Html.ActionLink("Join", "Join", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>